{
  "name": "@4a/helper",
  "version": "0.1.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/helper.esm.js",
  "author": "gavinning <gavinning@qq.com>",
  "license": "MIT",
  "scripts": {
    "dev": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "tabWidth": 4,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "size-limit": [
    {
      "path": "dist/helper.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/helper.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^6.0.0",
    "husky": "^7.0.2",
    "size-limit": "^6.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  }
}
